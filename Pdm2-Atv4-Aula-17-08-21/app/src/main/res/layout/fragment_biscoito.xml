<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.biscoito.BiscoitoFragment">

    <ImageView
        android:id="@+id/imageViewBiscoito"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="fitCenter"
        android:src="@drawable/biscuit"
        android:contentDescription="@string/biscoito" />

    <TextView
        android:id="@+id/textViewBiscoito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/biscoito" />

</LinearLayout>